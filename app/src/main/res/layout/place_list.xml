<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/icono_lugar"
        android:layout_width="45dp"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/parking" />

    <TextView
        android:id="@+id/clase_label"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icono_lugar"
        android:layout_toRightOf="@+id/icono_lugar"
        android:text="TextView2" />

    <ImageButton
        android:id="@+id/delete_place"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/add_tags"
        android:clickable="true"
        android:onClick="onClick"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/add_tags"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:clickable="true"
        android:onClick="onClick"
        app:srcCompat="@android:drawable/ic_menu_edit" />


</RelativeLayout>